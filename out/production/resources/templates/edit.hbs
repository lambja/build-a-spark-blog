{{#partial "content"}}
<section>
    <div class="container">
        <div class="edit-entry">
            <h2>Edit Entry</h2>
            <form action="/detail/{{blogEntry.slug}}/edit" method="post">
                <label for="title"> Title</label>
                <input type="text" name="title" value="{{blogEntry.title}}"><br>
                <label for="entry">Entry</label>
                <textarea rows="5" name="entry">{{blogEntry.entry}}</textarea>
                <input type="submit" value="Save Entry" class="button">
                <a href="/detail/{{blogEntry.slug}}" class="button button-secondary">Cancel</a>
            </form>
            <br><br><br><br>
            <h2>Add Tag</h2>
            <ul class="tags">
                {{#each blogEntry.tags}}
                    <li>
                        <form class="tag" action="/tag" method="get">
                            <input type="hidden" name="tag" value="{{this}}"/>
                            <input type="submit" value="{{this}}">
                        </form>
                    </li>
                {{/each}}
            </ul>
            <form action="/tag/{{blogEntry.slug}}" method="post">
                <label for="Tag"> Tag</label>
                <input type="text" name="tag" required><br>
                <input type="submit" value="Save Tag" class="button">
                <a href="/detail/{{blogEntry.slug}}" class="button button-secondary">Cancel</a>
            </form>
            <br><br><br><br>
            <h2>Delete Entry</h2>
            <form action="/delete/{{blogEntry.slug}}" method="post">
                <input type="submit" value="Delete Entry" class="button">
            </form>
        </div>
    </div>
</section>
{{/partial}}

{{> base.hbs}}