{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list">
                {{#each entries}}
                    <article>
                        <h2><a href="/detail/{{slug}}">{{ title }}</a></h2>
                        <div class="wrapper">
                            <ul class="tags">
                            {{#each tags}}
                                <li>
                                    <form class="tag" action="/tag" method="get">
                                        <input type="hidden" name="tag" value="{{this}}"/>
                                        <input type="submit" value="{{this}}">
                                    </form>
                                </li>
                            {{/each}}
                            </ul>
                        </div>
                        <time datetime="2016-01-31 1:00">{{ date }}</time>
                    </article>
                {{/each}}
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}